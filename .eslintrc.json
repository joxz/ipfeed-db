{
  "env": {
      "es2021": true,
      "node": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
  },
  "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"],
      "no-var": "error",
      "no-throw-literal": "error",
      "no-cond-assign": ["error", "always"],
      "no-console": "off"
  }
}